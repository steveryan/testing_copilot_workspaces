<h1>Log In</h1>

<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email, required: true %>
  </div>
  <div class="field">
    <%= form.label :password %><br>
    <%= form.password_field :password, required: true %>
  </div>
  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>

<%= link_to 'Sign up', new_user_path %>
