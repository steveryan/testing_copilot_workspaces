<%= form_with(model: [ @post, Comment.new ], local: true) do |form| %>
  <div class="field">
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </div>
  <div class="field">
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
